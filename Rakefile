begin
  require "jeweler"
  Jeweler::Tasks.new do |gem|
    gem.name = "transl8r"
    gem.summary = "i18n Translator using google translate"
    gem.files = Dir["{lib}/**/*"]
    gem.add_dependency('sishen-rtranslate', '>= 1.4')
  end
rescue
  puts "Jeweler or one of its dependencies is not installed."
end